<div class="container-fluid">

  <% if @homework.actual_phase == "argumentar" %>

    <% if @partner_answer != nil %>

      <h3><b>Respuesta compañer@ 1</b></h3>

      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
          <%= simple_format(@partner_answer.responder, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
        </div>

        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
          <% if @partner_answer.image_responder_1?%>
            <button data-toggle="modal" data-target=".bs-responder_1-modal-lg">
              <%= image_tag @partner_answer.image_responder_1.url(:medium), style: "height: 100px; width: 100px" %>
            </button>

            <div class="modal fade bs-responder_1-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  <div class="modal-body">
                    <p><%= image_tag @partner_answer.image_responder_1.url(:medium) %></p>
                  </div>
                </div>
              </div>
            </div>
          <%else%>
          <button>
            <%= image_tag('image_file.png', style: "height: 100px; width: 100px;") %>
          </button>
          <%end%>
          <br></br>

          <% if @partner_answer.image_responder_2?%>
            <button data-toggle="modal" data-target=".bs-responder_2-modal-lg">
              <%= image_tag @partner_answer.image_responder_2.url(:medium), style: "height: 100px; width: 100px" %>
            </button>

            <div class="modal fade bs-responder_2-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  <div class="modal-body">
                    <p><%= image_tag @partner_answer.image_responder_2.url(:medium) %></p>
                  </div>
                </div>
              </div>
            </div>
          <%else%>
          <button>
            <%= image_tag('image_file.png', style: "height: 100px; width: 100px;") %>
          </button>
          <%end%>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
          <h3><b>Nota respuesta compañer@ 1</b></h3>
        </div>

        <div class="col-sm-10 col-md-10 col-lg-10">
          <% if @user_id == @partner_answer.corrector_id and @partner_answer.grade_argue_1 != nil %>
            <%= @partner_answer.grade_argue_1 %>
          <% elsif @user_id == @partner_answer.corrector_id_2 and @partner_answer.argumentar_2 != nil %>
            <%= @partner_answer.grade_argue_2 %>
          <% end %>
        </div>

      </div>

      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
          <% if @user_id == @partner_answer.corrector_id and @partner_answer.argumentar != nil %>
          <h3><b>Tu argumento</b></h3>
            <%= simple_format(@partner_answer.argumentar, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
          <% elsif @user_id == @partner_answer.corrector_id_2 and @partner_answer.argumentar_2 != nil %>
          <h3><b>Tu argumento</b></h3>
            <%= simple_format(@partner_answer.argumentar_2, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
          <% end %>
        </div>
      </div>
    <% end %>

    <% if @partner_answer_2 != nil %>
      <h3><b>Respuesta compañer@ 2</b></h3>
      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
          <%= simple_format(@partner_answer_2.responder, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
        </div>
        <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
          <% if @partner_answer_2.image_responder_1?%>
            <button data-toggle="modal" data-target=".bs-responder_1-modal-lg">
              <%= image_tag @partner_answer_2.image_responder_1.url(:medium), style: "height: 100px; width: 100px" %>
            </button>

            <div class="modal fade bs-responder_1-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  <div class="modal-body">
                    <p><%= image_tag @partner_answer_2.image_responder_1.url(:medium) %></p>
                  </div>
                </div>
              </div>
            </div>
          <%else%>
          <button>
            <%= image_tag('image_file.png', style: "height: 100px; width: 100px;") %>
          </button>
          <%end%>

          <br></br>

          <% if @partner_answer_2.image_responder_2?%>
            <button data-toggle="modal" data-target=".bs-responder_2-modal-lg">
              <%= image_tag @partner_answer_2.image_responder_2.url(:medium), style: "height: 100px; width: 100px" %>
            </button>

            <div class="modal fade bs-responder_2-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
              <div class="modal-dialog modal-lg" role="document">
                <div class="modal-content">
                  <div class="modal-body">
                    <p><%= image_tag @partner_answer_2.image_responder_2.url(:medium) %></p>
                  </div>
                </div>
              </div>
            </div>
          <%else%>
          <button>
            <%= image_tag('image_file.png', style: "height: 100px; width: 100px;") %>
          </button>
          <%end%>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
          <h3><b>Nota respuesta compañer@ 2</b></h3>
        </div>

        <div class="col-sm-10 col-md-10 col-lg-10">
          <% if @user_id == @partner_answer_2.corrector_id and @partner_answer_2.grade_argue_1 != nil %>
            <%= @partner_answer_2.grade_argue_1 %>
          <% elsif @user_id == @partner_answer_2.corrector_id_2 and @partner_answer_2.argumentar_2 != nil %>
            <%= @partner_answer_2.grade_argue_2 %>
          <% end %>
        </div>

      </div>

      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
          <% if @user_id == @partner_answer_2.corrector_id and @partner_answer_2.argumentar != nil %>
          <h3><b>Tu argumento</b></h3>
            <%= simple_format(@partner_answer_2.argumentar, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
          <% elsif @user_id == @partner_answer_2.corrector_id_2 and @partner_answer_2.argumentar_2 != nil %>
          <h3><b>Tu argumento</b></h3>
            <%= simple_format(@partner_answer_2.argumentar_2, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
          <% end %>
        </div>
      </div>
    <% end %>

  <% elsif @homework.actual_phase == "rehacer" %>

    <% if @my_answer.argumentar != nil %>

      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
          <h3><b>Nota respuesta compañer@ 1</b></h3>
        </div>

        <div class="col-sm-10 col-md-10 col-lg-10">
            <%= @my_answer.grade_argue_1 %>
        </div>

      </div>

      <h3><b>Argumentos compañer@ 1</b></h3>

      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
          <%= simple_format(@my_answer.argumentar, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">

          <h3><b>Evaluación argumentos compañer@ 1: <%= @my_answer.grade_eval_1 %></b></h3>

        </div>
      </div>
    <% end %>

    <% if @my_answer.argumentar_2 != nil %>

      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
          <h3><b>Nota argumentos compañer@ 2</b></h3>
        </div>

        <div class="col-sm-10 col-md-10 col-lg-10">
          <%= @my_answer.grade_argue_2 %>
        </div>

      </div>

      <h3><b>Argumentos compañer@ 2</b></h3>
      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
          <%= simple_format(@my_answer.argumentar_2, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
        </div>
      </div>

      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">

          <h3><b>Evaluación argumentos compañer@ 2: <%= @my_answer.grade_eval_2 %></b></h3>

        </div>
      </div>
    <% end %>

  <% end %>


</div>
