<div class="container-fluid">
  <% if @partner_answer != nil %>
    <div class="card", style='box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.3s;padding:2%;'>
      <div class="container">
      <h3><b>Respuesta compañera/o</b></h3>
      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10">
          <%= simple_format(@partner_answer.responder, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
        </div>
      </div>
      </div>

      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10" style='padding: 2%;'>
          <% if @my_answer.user_id == @partner_answer.corrector_id and @partner_answer.grade_argue_1 != nil %>
            <h3><b>Nota actual para compañera/o: <%= @partner_answer.grade_argue_1 %></b></h3>
          <% elsif @my_answer.user_id == @partner_answer.corrector_id_2 and @partner_answer.grade_argue_2 != nil %>
            <h3><b>Nota actual para compañera/o: <%= @partner_answer.grade_argue_2 %></b></h3>
          <% end %>
        </div>
      </div>
    </div>
    </div>

    <div class="row">
      <div class="col-sm-10 col-md-10 col-lg-10" style='padding: 5%;'>
        <%= render 'form_argument' %>
      </div>
    </div>

  <% end %>

</div>
