<div class="container-fluid">

  <% if @homework.actual_phase == "rehacer" %>

    <% @user = User.find_by_id(@my_answer.user_id) %>
    <% if @user.argument == 0 %>

      <div class="card", style='box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.3s;padding:2%;'>
        <div class="container">
          <h3><b>Síntesis</b></h3>
          <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10", style="font-size:15px; line-height:1.5", align="justify">
              <% synthesis = Sinthesy.where("homework_id = ? AND phase = ?", @my_answer.homework_id, "responder").last %>
              <div class="col-sm-10 col-md-10 col-lg-10">
                <% if synthesis != nil %>
                  <%= simple_format(synthesis.sinthesys, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
                <% end %>
              </div>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10", style="font-size:15px; line-height:1.5", align="justify">
                <% if @my_answer.grade_sinthesys != nil %>
                  <h4><b>Nota síntesis actual:</b> <%= @my_answer.grade_sinthesys %></h4>
                <% else %>
                  <h4><b>Nota síntesis:</b> Sin nota </h4>
                <% end %>

                <h4>Elija calificación a asignar</h4>
                <%= form_for @my_answer, :url => { :action => "update", :id => @my_answer.id }, authenticity_token: true do |f| %>
                <div class="field">
                  <%= f.select :grade_sinthesys, options_for_select(1..7)%>
                </div>
                <div class="field" style='padding: 2%;'>
                  <% if @my_answer.grade_sinthesys == nil %>
                    <%= f.submit "Agregar nota síntesis", class: "btn be-red white"%>
                  <% else %>
                    <%= f.submit "Editar nota síntesis", class: "btn be-red white"%>
                  <% end %>
              </div>
            </div>
          </div>
        </div>
      </div>

      <% end %>
    <% end %>

    <% if @my_answer.argumentar != nil %>

      <div class="card", style='box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.3s;padding:2%;'>
        <div class="container">
          <h3><b>Argumentos compañera/o</b></h3>

          <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10">
              <%= simple_format(@my_answer.argumentar, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10">
              <h3><b>Evaluación argumentos compañera/o: <%= @my_answer.grade_eval_1 %></b></h3>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10">
              <h3><b>Califica el feedback de tu compañera/o</b></h3>
              <h4>Elija calificación a asignar</h4>
              <%= form_for @my_answer, :url => { :action => "update", :id => @my_answer.id }, authenticity_token: true do |f| %>
              <div class="field">
                <%= f.select :grade_eval_1, options_for_select(1..7)%>
              </div>
              <div class="field">
                <% if @my_answer.grade_argue_1 == nil %>
                  <%= f.submit "Calificar feedback 1", class: "btn be-red white"%>
                <% else %>
                  <%= f.submit "Editar nota de feedback 1", class: "btn be-red white"%>
                <% end %>
              </div>
              <% end %>
            </div>
          </div>

        </div>
      </div>

    <% end %>

    <% if @my_answer.argumentar_2 != nil %>

      <div class="card", style='box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.3s;padding:2%;'>
        <div class="container">
          <h3><b>Argumentos compañera/o</b></h3>
          <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10">
              <%= simple_format(@my_answer.argumentar_2, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10">
              <h3><b>Evaluación argumentos compañera/o: <%= @my_answer.grade_eval_2 %></b></h3>
            </div>
          </div>

          <div class="row">
            <div class="col-sm-10 col-md-10 col-lg-10">
              <h3><b>Califica el feedback de tu compañera/o</b></h3>
              <h4>Elija calificación a asignar</h4>
              <%= form_for @my_answer, :url => { :action => "update", :id => @my_answer.id }, authenticity_token: true do |f| %>
              <div class="field">
                <%= f.select :grade_eval_2, options_for_select(1..7)%>
              </div>
              <div class="field">
                <% if @my_answer.grade_argue_2 == nil %>
                  <%= f.submit "Calificar feedback 2", class: "btn be-red white"%>
                <% else %>
                  <%= f.submit "Editar nota de feedback 2", class: "btn be-red white"%>
                <% end %>
              </div>
              <% end %>
            </div>
          </div>
        <% end %>

        </div>
      </div>

  <% end %>

    <div class="card", style='box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);transition: 0.3s;padding:2%;'>
      <div class="container">
        <h2><b>Instrucciones</b></h2>
    		<div class="row">
    			<div class="col-sm-10 col-md-10 col-lg-10">
    				<% if @homework.actual_phase == "responder"  %>
    					<%= simple_format(@homework.responder_instruction, {style:"font-size:20px; line-height:1.5", align:"justify"}) %>
    				<% elsif @homework.actual_phase == "argumentar"  %>
    					<%= simple_format(@homework.argumentar_instruction, {style:"font-size:20px; line-height:1.5", align:"justify"}) %>
    				<% elsif @homework.actual_phase == "rehacer" %>
    					<%= simple_format(@homework.rehacer_instruction, {style:"font-size:20px; line-height:1.5", align:"justify"}) %>
    				<% end  %>
    			</div>
    		</div>
      </div>
    </div>

</div>
