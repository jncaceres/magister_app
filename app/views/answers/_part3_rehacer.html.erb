<div class="container-fluid">
  <% if @user.argument == 0 %>

      <h3><b>Síntesis</b></h3>
      <div class="row">
        <div class="col-sm-10 col-md-10 col-lg-10", style:"font-size:15px; line-height:1.5", align:"justify">
            <% if @my_answer.grade_sinthesys != nil %>
              <h4><b>Nota síntesis:</b> <%= @my_answer.grade_sinthesys %></h4>
            <% else %>
              <h4><b>Nota síntesis:</b> Sin nota </h4>
            <% end %>
            <% synthesis = Sinthesy.where("homework_id = ? AND phase = ?", @my_answer.homework_id, "responder").last %>
            <div class="col-sm-10 col-md-10 col-lg-10">
              <% if synthesis != nil %>
                <%= simple_format(synthesis.sinthesys, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
              <% end %>
            </div>
        </div>
      </div>

  <% end %>

  <% if @my_answer.rehacer != nil %>
    <h3><b>Rehacer</b></h3>
    <div class="row">
      <div class="col-sm-10 col-md-10 col-lg-10">
        <%= simple_format(@my_answer.rehacer, {style:"font-size:15px; line-height:1.5", align:"justify"})%>
      </div>
      <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
        <% if @my_answer.image_rehacer_1?%>
          <button data-toggle="modal" data-target=".bs-rehacer_1-modal-lg">
            <%= image_tag @my_answer.image_rehacer_1.url(:medium), style: "height: 100px; width: 100px" %>
          </button>

          <div class="modal fade bs-rehacer_1-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
            <div class="modal-dialog modal-lg" role="document">
              <div class="modal-content">
                <div class="modal-body">
                  <p><%= image_tag @my_answer.image_rehacer_1.url(:medium) %></p>
                </div>
              </div>
            </div>
          </div>
        <%else%>
        <button>
          <%= image_tag('image_file.png', style: "height: 100px; width: 100px;") %>
        </button>
        <%end%>

        <br></br>

        <% if @my_answer.image_rehacer_2?%>
          <button data-toggle="modal" data-target=".bs-rehacer_2-modal-lg">
            <%= image_tag @my_answer.image_rehacer_2.url(:medium), style: "height: 100px; width: 100px" %>
          </button>

          <div class="modal fade bs-rehacer_2-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
            <div class="modal-dialog modal-lg" role="document">
              <div class="modal-content">
                <div class="modal-body">
                  <p><%= image_tag @my_answer.image_rehacer_2.url(:medium) %></p>
                </div>
              </div>
            </div>
          </div>
        <%else%>
        <button>
          <%= image_tag('image_file.png', style: "height: 100px; width: 100px;") %>
        </button>
        <%end%>
      </div>
    </div>
  <% end %>
</div>
