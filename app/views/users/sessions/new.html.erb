<div style="text-align: center">
  <h2>Iniciar Sesión</h2>

  <% if flash.notice %>
    <div class="alert alert-warning"><%= flash.notice %></div>
  <% end %>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal") do |f| %>

    <form class="form-horizontal">

      <div class="form-group">
        <label for="mailInput" class="col-sm-9 control-label">Correo</label>
        <div class="col-sm-offset-4">
          <div class="col-xs-6">
            <%= f.email_field :email, autofocus: true , id:"mailInput", class:"form-control", placeholder: 'Ingrese correo electrónico'%>
          </div>
        </div>

      <div class="form-group">
        <label for="passwordInput" class="col-sm-9 control-label">  Contraseña</label>
        <div class="col-sm-offset-4">
          <div class="col-xs-6">
            <%= f.password_field :password, autocomplete: "off", id:"passwordInput", class:"form-control", placeholder: 'Ingrese contraseña' %>
          </div>
        </div>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="form-group">
          <div class="col-sm-offset-2 col-sm-8">
            <div class="checkbox">
              <label>
                <%= f.check_box :remember_me %> Recordar Contraseña
              </label>
            </div>
          </div>
        </div>
      <% end -%>

      <span class="help-block"></span>

      <div class="form-group">
        <div class="col-sm-offset-2 col-sm-8">
          <div class="actions">
            <%= f.submit "Iniciar Sesión", :class=>"btn btn-primary"%>
          </div>
        </div>
      </div>
    </form>
  <% end %>

  <%= render "users/shared/links" %>
</div>
