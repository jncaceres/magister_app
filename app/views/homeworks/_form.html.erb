<%= form_for(@homework) do |f| %>

  <% if @homework.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@homework.errors.count, "error") %> prohibited this homework from being saved:</h2>

      <ul>
      <% @homework.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <form class="form-horizontal">
    <div class="form-group">
      <label for="ac_name" class="col-sm-9 control-label">Nombre</label>
      <div class="col-sm-offset-4">
        <div class="col-xs-6">
          <%= f.text_field :name, id:"ac_name", class:"form-control", placeholder: 'Ingrese nombre de la actividad' %>
          <br>
        </div>
      </div>
    </div>


      <div class="form-group">
        <label for="ac_content" class="col-sm-9 control-label">Pregunta</label>
        <div class="col-sm-offset-4">
          <div class="col-xs-6" style="text-align:center">
            <%= f.text_area :content, cols: 40, rows: 15, id:"ac_content", class:"form-control", placeholder: 'Ingrese pregunta de la actividad', style: "height:300px; width:400px" %>
            <br>
          </div>
        </div>
      </div>

    <div class="form-group">
      <div class="col-sm-offset-4">
        <label for="responder_instruction" class="col-sm-9 control-label">Instrucciones Fase Responder</label>
        <div class="col-xs-6" style="text-align:center">
          <%= f.text_area :responder_instruction, cols: 40, rows: 15, id:"responder_instruction", class:"form-control", placeholder: 'Ingrese las instrucciones para la primera fase de la actividad', style: "height:300px; width:400px" %>
          <br>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4">
        <label for="argumentar_instruction" class="col-sm-9 control-label">Instrucciones Fase Argumentar</label>
        <div class="col-xs-6" style="text-align:center">
          <%= f.text_area :argumentar_instruction, cols: 40, rows: 15, id:"argumentar_instruction", class:"form-control", placeholder: 'Ingrese las instrucciones para la segunda fase de la actividad', style: "height:300px; width:400px" %>
          <br>
        </div>
      </div>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-4">
        <label for="rehacer_instruction" class="col-sm-9 control-label">Instrucciones Fase Rehacer</label>
        <div class="col-xs-6" style="text-align:center">
          <%= f.text_area :rehacer_instruction, cols: 40, rows: 15, id:"rehacer_instruction", class:"form-control", placeholder: 'Ingrese las instrucciones para la tercera fase de la actividad', style: "height:300px; width:400px" %>
          <br>
        </div>
      </div>
    </div>

    <div class="form-group">
      <label for="ac_content" class="col-sm-9 control-label">Imagen</label>
      <div class="col-sm-offset-4">
        <div class="col-xs-6">
          <%= f.file_field :image, id:"i_homework"%>
          <br>
        </div>
      </div>
    </div>

    <div class="form-group">
      <% if !current_page?(new_homework_path) %>
        <% if @homework.image? %>
          <label for="ac_content" class="col-sm-9 control-label">Imagen Subida</label>
          <br>
      		<p><%= image_tag @homework.image.url(:medium) %></p>
      	<% end %>
      <% end %>
    </div>

    <div class="form-group">
      <div class="col-sm-offset-2 col-sm-8">
        <div class="actions">
          <%= f.submit :'Aceptar', :class=>"btn btn-primary", :style=>'color:white' %>
        </div>
      </div>
    </div>
  </form>
<% end %>
