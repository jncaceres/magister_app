<div class="container-fluid">
  <h2><b>Pregunta</b></h2>
  <div class="row">
    <div class="col-sm-10 col-md-10 col-lg-10">
      <%= simple_format(@homework.content, {style:"font-size:20px; line-height:1.5", align:"justify"}) %>
    </div>
    <div class="col-xs-2 col-sm-2 col-md-2 col-lg-2">
      <% if @homework.image? %>
        <button data-toggle="modal" data-target=".bs-argumentar-modal-lg">
          <%= image_tag @homework.image.url(:medium), style: "height: 100px; width: 100px" %>
        </button>

        <div class="modal fade bs-argumentar-modal-lg" tabindex="-1" role="dialog" aria-labelledby="myLargeModalLabel">
          <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
              <div class="modal-body">
                <p><%= image_tag @homework.image.url(:medium) %> %></p>
              </div>
            </div>
          </div>
        </div>
      <%else%>
      <button>
        <%= image_tag('image_file.png', style: "height: 100px; width: 100px;") %>
      </button>
      <%end%>
    </div>
  </div>
</div>
